        <div class="row">
          <div class="large-6 columns">
          </div>
          <div class="large-6 columns">
            <%= image_tag post.picture_url(:thumb) if post.picture? %>
          </div>
        </div>

    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </article>
<% end %>
<%= link_to 'New Post', new_post_path %>
