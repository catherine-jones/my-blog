
  <div class="row" >
 
    <!-- Main Blog Content -->
    <div class="large-9 columns" role="content" >

 	<% @posts.each do |post| %><!-- for each post in the db -->
      <article>
        <div class="date">
        <div id="day">
          <%= post.created_at.strftime("%e") %>
        </div>
        <div class="daymonth">
        <div id="month"><%= post.created_at.strftime("%b") %>
        </div>
        <div id="year"><%= post.created_at.strftime("%Y") %></div>
      </div>
      </div>
      <h3><%= link_to post.title,post %></h3>
        <div class="row">
          <%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
          <div class="large-6 columns">
        </div>
        </div>
        <div class="edit">
    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
    </article>
<% end %>
<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
    </div>
 
    <!-- End Main Content -->
 
 
    <!-- Sidebar -->
 
    <aside class="large-3 columns">
 
      <h5>Categories</h5>
      <ul class="side-nav">
        <li><%= link_to 'Artcles', posts_path(tagged: 'Ruby on Rails') %></li> 
        <li><%= link_to 'Ruby on Rails', posts_path(tagged: 'Ruby on Rails') %></li>
        <li><%= link_to 'Design', posts_path(tagged: 'Design') %></li>
        <li><%= link_to 'HTML/CSS', posts_path(tagged: 'HTML/CSS') %></li>
        <li><%= link_to 'JavaSript', posts_path(tagged: 'JavaScript') %></li>
      </ul>
 
      <div class="panel">
        <h5>Events</h5>
        
        <a href="#">Read More â†’</a>
      </div>
 
    </aside>
 
    <!-- End Sidebar -->
  </div>
 
  <!-- End Main Content and Sidebar -->

